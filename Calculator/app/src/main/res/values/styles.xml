<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="STYLE_RESULT_LABEL">
        <item name="android:textSize">@dimen/result_font_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="STYLE_RESULT_VALUE" parent="STYLE_RESULT_LABEL">
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="STYLE_RESULT_ERROR" parent="STYLE_RESULT_LABEL">
        <item name="android:textColor">@color/errorColor</item>
    </style>
</resources>